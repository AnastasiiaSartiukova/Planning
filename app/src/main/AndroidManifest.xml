<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.planning">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Planning">


        <activity
            android:name=".CreateProjectActivity"
            android:label="CreateProjectActivity"
            android:theme="@style/Theme.Planning.NoActionBar">
            <intent-filter>
                <action android:name=".CreateProjectActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".LogIn"
            android:label="LogIn"
            android:theme="@style/Theme.Planning.NoActionBar">
            <intent-filter>
                <action android:name=".LogIn" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ProjectListActivity"
            android:label="@string/title_activity_project_list"
            android:theme="@style/Theme.Planning.NoActionBar">
            <intent-filter>
                <action android:name=".ProjectListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>


        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.Planning.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


    </application>

</manifest>